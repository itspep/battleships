{
    "name": "project-template",
    "version": "1.0.0",
    "description": "A universal Webpack project template",
    "main": "src/index.js",
    "scripts": {
        "dev": "webpack serve --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js",
        "watch": "webpack --watch --config webpack.dev.js",
        "predeploy": "npm run build",
        "deploy": "git subtree push --prefix dist origin gh-pages",
        "deploy-init": "git branch gh-pages && npm run deploy",
        "redeploy": "npm run build && git add dist -f && git commit -m \"Deployment commit\" && npm run deploy",
        "clean": "rm -rf dist",
        "lint": "eslint src/**/*.js",
        "format": "prettier --write src/**/*.{js,css,html}",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "webpack",
        "template",
        "javascript",
        "es6"
    ],
    "author": "Pep Tahiru",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.0",
        "eslint": "^8.42.0",
        "file-loader": "^6.2.0",
        "html-loader": "^4.2.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^30.2.0",
        "prettier": "^2.8.0",
        "style-loader": "^3.3.0",
        "url-loader": "^4.1.1",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "webpack-dev-server": "^4.15.0",
        "webpack-merge": "^5.9.0"
    },
    "dependencies": {
        "date-fns": "^2.30.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/itspep/battleships.git"
    },
    "bugs": {
        "url": "https://github.com/itspep/battleships/issues"
    },
    "homepage": "https://github.com/itspep/battleships#readme"
}
